extends ../layout

block content
    div.row
        div.col-sm-6
            div.page-header
                h1 Sign Up
            div#signup
                form(role='form',method="post",action="/api/signup")
                    div.form-group
                        label Pick a Username:
                        input.form-control(type='text', name='username')
                    div.form-group
                        label Enter Your Email:
                        input.form-control(type='text', name='email')
                    div.form-group
                        label Create a Password:
                        input.form-control(type='password', name='password')
                    div.form-group
                        button.btn.btn-primary.btn-signup(type='submit') Create My Account
                div.col-sm-6.marketing
                    p.lead Really, you will love it inside. It's super great!
                    i.fa.fa-thumbs-o-up.super-awesome
