{
    "name": "Authentication-Authorization-Module",
    "version": "0.0.2",
    "private": true,
    "apidoc": {
        "description": "API documentation",
        "title": "API doc",
        "url" : "/api"
    },
    "author": "e-UCM Research Group",
    "license": "Apache 2.0",
    "scripts": {
        "docker-start": "npm run fast-setup && npm run register-root && npm start",
        "start": "node ./bin/www",
        "lint": "jshint --verbose .",
        "setup": "./setup.js",
        "fast-setup": "SETUP_MODE=fast ./setup.js",
        "register-root": "SETUP_MODE=register-root ./setup.js",
        "test": "npm run lint && NODE_ENV=test ./node_modules/mocha/bin/_mocha --recursive -R spec",
        "test-win": "npm run lint && set NODE_ENV=test&& mocha --recursive -R spec",
        "test-travis": "npm run lint && npm run fast-setup && NODE_ENV=test ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- -R spec ./test/*",
        "gen-apidoc": "apidoc -i ./routes -o ./public/apirest"
    },
    "dependencies": {
        "acl": "0.4.7",
        "async": "^1.3.x",
        "bcrypt": "^0.8.x",
        "body-parser": "^1.13.x",
        "debug": "^2.2.x",
        "emailjs": "^0.3.x",
        "express": "~4.13.x",
        "express-jwt": "*",
        "http-proxy": "*",
        "jade": "^1.11.x",
        "jsonwebtoken": "^5.0.x",
        "lodash": "*",
        "mongodb": "^2.0.x",
        "mongoose": "^4.0.x",
        "morgan": "^1.6.x",
        "passport": "^0.2.x",
        "passport-local-mongoose": "1.0.x",
        "path-to-regexp": "^1.2.x",
        "q": "*",
        "redis": "*",
        "validator": "^3.41.x"
    },
    "devDependencies": {
        "apidoc": "*",
        "assert": "*",
        "confidence": "*",
        "coveralls": "*",
        "handlebars": "*",
        "istanbul": "*",
        "jquery": "*",
        "jshint": "*",
        "mocha": "*",
        "promptly": "*",
        "should": "*",
        "supertest": "*"
    }
}
