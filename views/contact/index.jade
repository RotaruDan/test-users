extends ../page

block content
    .container.theme-showcase
        .row-fluid
            .col-sm-6
                .page-header
                    h1 Contact
                #contact(ng-controller='ContactCtrl')
                    form(role='form')
                        .form-group
                            label Your name:
                            input.form-control(type='text', style='border-radius: 0px;', placeholder='Your name', ng-model='contactObj.name')
                        .form-group
                            label Your email:
                            input.form-control(type='text', style='border-radius: 0px;', placeholder='Your email', ng-model='contactObj.email')
                        .form-group
                            label Your message:
                            textarea.form-control(type='text', style='border-radius: 0px;', placeholder='Some text', ng-model='contactObj.text')
                        .form-group.text-right
                            button.btn.btn-primary(type='submit', ng-click='contact()') Contact
                    alert.alert-danger {{errorMsg}}
                    alert.alert-success {{successMsg}}
